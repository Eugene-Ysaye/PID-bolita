#include <Servo.h>

#define echoPin 11;
#define triggerPin 12;

#define servoPin 9;

Servo motorServo;
//convierte al servo en un objeto

int sensorRead;
int distance;
int angle;

void setup(){
	pinMode(echoPin, INPUT);
	pinMode(triggerPin, OUTPUT);
	
	motorServo.attach(servoPin);
	//ServoPin->motorServo
	
	Serial.begin(9600);
}

void loop(){
	//DistanceRead();
	
	digitalWrite(triggerPin, HIGH);
	delayMicroseconds(10);
	sensorRead = pulseIn(echoPin, HIGH);
	
	angle = map(sensorRead, 0, 255, 0, 180);
	//creo era 0 - 255¿¿¿
	motorServo.write(angle);
}

//void DistanceRead(){
	
}
