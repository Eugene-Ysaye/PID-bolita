#include <Servo.h>

#define echoPin 11;
#define triggerPin 12;

#define servoPin 9;

Servo motorServo;
//convierte al servo en un objeto

int sensorRead;
int distance;
int angle = 50;//angulo reposo

void setup(){
	pinMode(echoPin, INPUT);
	pinMode(triggerPin, OUTPUT);
	
	motorServo.attach(servoPin);
	//ServoPin->motorServo
	
	motorServo.Write(angle);
	Serial.begin(9600);
}

void loop(){
	//DistanceRead();
	
	digitalWrite(triggerPin, HIGH);
	delayMicroseconds(10);
	sensorRead = pulseIn(echoPin, HIGH);
	delay(25);
	digitalWrite(triggerPin, LOW);
	
	distance = ConvertCm(sensorRead);
	
	angle = map(distance, 5, 25, 180, 0);
	//primer rango: dostancia cm, 2do: angulo servo
	//mantener 2do invertidoÂ¿
	motorServo.write(angle);
}

int ConvertCm(int time){
	return 17000 * time;
	//340k-> v sonido, d=vt, /2 pq da tiempo d ida y regreso
}
//void DistanceRead(){}
